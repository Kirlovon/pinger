generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
}

model Url {
  id           String        @id @default(nanoid())
  url          String        
  createdAt    DateTime      @default(now())

  lastPing     PingRequest?
  @@map("urls")
}

model PingRequest {
  id           String   @id @default(nanoid())
  urlId        String   @unique
  status       Int
  createdAt    DateTime @default(now())
  responseTime Int
  
  url          Url      @relation(fields: [urlId], references: [id], onDelete: Cascade)
  @@index([urlId])
  @@map("ping_requests")
}
